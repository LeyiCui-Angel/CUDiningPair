<h2>Edit User Profile</h2>

<%= form_for @user, url: user_path(@user), method: :patch, :class => 'form' do |f| %>
  <%= label :user, :name, 'Name', :class => 'col-form-label' %>
  <%= f.text_field :name, :class => 'form-control' %>

  <%= label :user, :gender, 'Gender', :class => 'col-form-label'  %>
  <%= f.select :gender, User.genders.keys.map { |k| [k.humanize, k] }, {}, { :class => 'form-control' } %>

  <%= label :user, :mbti, 'MBTI', :class => 'col-form-label'  %>
  <%= f.select :mbti, User.mbtis.keys.map { |k| [k.upcase, k] }, {}, { :class => 'form-control' } %>

  <br/>

  <%= f.submit 'Save Changes', :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', users_path, :class => 'btn btn-secondary' %>
<% end %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
