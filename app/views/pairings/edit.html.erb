<!-- app/views/pairings/edit.html.erb -->
<h2>Edit Existing Pairing</h2>

<%= form_for @pairing, url: pairing_path(@pairing), method: :put do |f| %>
  <div class="form-group">
    <%= f.label :users, 'Users', class: 'col-form-label' %>
    <%= f.collection_select :user_ids, User.all, :id, :name, { selected: @pairing.user_ids }, { multiple: true, class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.label :restaurant_id, 'Restaurant', class: 'col-form-label' %>
    <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name, { selected: @pairing.restaurant_id }, { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.label :target_number_of_people, 'Target Number of People', class: 'col-form-label' %>
    <%= f.number_field :target_number_of_people, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Update Pairing Info', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', pairings_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
