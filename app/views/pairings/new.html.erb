<!-- app/views/pairings/new.html.erb -->
<h2>Create New Pairing</h2>

<%= form_for @pairing, url: pairings_path, method: :post do |f| %>

  <div class="form-group">
    <%= f.label :restaurant_id, 'Restaurant', class: 'col-form-label' %>
    <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name, {}, { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.label :target_number_of_people, 'Target Number of People', class: 'col-form-label' %>
    <%= f.number_field :target_number_of_people, class: 'form-control', min: 2, value: @pairing.target_number_of_people.presence || 2 %>
  </div>

  <div class="form-group">
    <%= f.label :meeting_time, 'Meeting Time', class: 'col-form-label' %>
    <%= f.datetime_select :meeting_time, class: 'form-control' %>
    <small class="text-muted">Note: Meeting time must be at least one hour later than the current time.</small>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Pairing', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', pairings_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

