<h2>Edit Existing Restaurant</h2>
<%= form_for @restaurant, url: restaurant_path(@restaurant), method: :put do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Name', class: 'col-form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :rating, 'Rating', class: 'col-form-label' %>
    <%= f.select :rating, ['1', '2', '3', '4', '5'], {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :location, 'Location', class: 'col-form-label' %>
    <%= f.text_field :location, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :cuisine, 'Cuisine', class: 'col-form-label' %>
    <%= select :restaurant, :cuisine, ['Hot Spicy', 'Vege', 'Not Spicy'], { selected: 'Hot Spicy' }, { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.submit 'Update Restaurant Info', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', restaurants_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
